<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/result_row"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/result_skin_imageView"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:src="@drawable/pill"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/result_type_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:text="화이트헤드(Whitehead)"
                android:textSize="15dp"
                android:textColor="@color/colorDarkGray"
                android:textStyle="bold"/>
            <CheckBox
                android:id="@+id/checkbox_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:clickable="false"
                android:text="집에서 치료 가능"
                android:textSize="13dp"
                android:textColor="@color/colorDarkGray"
                android:textStyle="bold"/>

            <CheckBox
                android:id="@+id/checkbox_hospital"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:clickable="false"
                android:text="병원 치료 필요"
                android:textColor="@color/colorDarkGray"
                android:textSize="13dp"
                android:textStyle="bold" />
            <CheckBox
                android:id="@+id/checkbox_infection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:clickable="false"
                android:text="염증성"
                android:textSize="13dp"
                android:textColor="@color/colorDarkGray"
                android:textStyle="bold"/>
            </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/result_cure_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textSize="12dp"
        android:textColor="@color/colorDarkGray"
        android:text="압출은 추천하지 않습니다.\n스팀 타올로 모공을 연 뒤, 피지연화제품으로 피지를 녹이고 모공 수축 팩을 모공을 수축시켜야 합니다."/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/colorDarkGray"/>

</LinearLayout>


